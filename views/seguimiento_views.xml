<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_gestion_paqueteria_seguimiento_tree" model="ir.ui.view">
        <field name="name">gestion.paqueteria.seguimiento.tree</field>
        <field name="model">gestion.paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <tree string="Seguimiento de paquetes">
                <field name="paquete_id"/>
                <field name="fecha"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_gestion_paqueteria_seguimiento_form" model="ir.ui.view">
        <field name="name">gestion.paqueteria.seguimiento.form</field>
        <field name="model">gestion.paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <form string="Seguimiento">
                <sheet>
                    <group>
                        <field name="paquete_id"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_gestion_paqueteria_seguimiento" model="ir.actions.act_window">
        <field name="name">Seguimiento</field>
        <field name="res_model">gestion.paqueteria.seguimiento</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
