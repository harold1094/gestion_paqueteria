<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_gestion_paqueteria_seguimiento_list" model="ir.ui.view">
        <field name="name">gestion.paqueteria.seguimiento.list</field>
        <field name="model">gestion.paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <list string="Seguimiento">
                <field name="paquete_id"/>
                <field name="fecha"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_gestion_paqueteria_seguimiento_form" model="ir.ui.view">
        <field name="name">gestion.paqueteria.seguimiento.form</field>
        <field name="model">gestion.paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <form string="Seguimiento">
                <sheet>
                    <group>
                        <field name="paquete_id"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_gestion_paqueteria_seguimiento" model="ir.actions.act_window">
        <field name="name">Seguimiento</field>
        <field name="res_model">gestion.paqueteria.seguimiento</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
