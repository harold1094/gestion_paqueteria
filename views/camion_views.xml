<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_gestion_paqueteria_camion_list" model="ir.ui.view">
        <field name="name">gestion.paqueteria.camion.list</field>
        <field name="model">gestion.paqueteria.camion</field>
        <field name="arch" type="xml">
            <list string="Camiones">
                <field name="name"/>
                <field name="modelo"/>
                <field name="capacidad_kg"/>
                <field name="empresa_id"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_gestion_paqueteria_camion_form" model="ir.ui.view">
        <field name="name">gestion.paqueteria.camion.form</field>
        <field name="model">gestion.paqueteria.camion</field>
        <field name="arch" type="xml">
            <form string="CamiÃ³n">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="modelo"/>
                        <field name="capacidad_kg"/>
                        <field name="empresa_id"/>
                        <field name="activo"/>
                    </group>

                    <notebook>
                        <page string="Paquetes">
                            <field name="paquete_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="estado"/>
                                    <field name="destinatario_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_gestion_paqueteria_camion" model="ir.actions.act_window">
        <field name="name">Camiones</field>
        <field name="res_model">gestion.paqueteria.camion</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
