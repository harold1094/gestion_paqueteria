<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_gestion_paqueteria_camion_tree" model="ir.ui.view">
        <field name="name">gestion.paqueteria.camion.tree</field>
        <field name="model">gestion.paqueteria.camion</field>
        <field name="arch" type="xml">
            <tree string="Camiones">
                <field name="name"/>
                <field name="modelo"/>
                <field name="capacidad_kg"/>
                <field name="empresa_id"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_gestion_paqueteria_camion_form" model="ir.ui.view">
        <field name="name">gestion.paqueteria.camion.form</field>
        <field name="model">gestion.paqueteria.camion</field>
        <field name="arch" type="xml">
            <form string="CamiÃ³n">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="modelo"/>
                        <field name="capacidad_kg"/>
                        <field name="empresa_id"/>
                        <field name="activo"/>
                    </group>

                    <!-- ðŸ”¹ IMPORTANTE: notebook + page -->
                    <notebook>
                        <page string="Paquetes">
                            <field name="paquete_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="estado"/>
                                    <field name="destinatario_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_gestion_paqueteria_camion" model="ir.actions.act_window">
        <field name="name">Camiones</field>
        <field name="res_model">gestion.paqueteria.camion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
