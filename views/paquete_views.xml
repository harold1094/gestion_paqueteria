<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_gestion_paqueteria_paquete_list" model="ir.ui.view">
        <field name="name">gestion.paqueteria.paquete.list</field>
        <field name="model">gestion.paqueteria.paquete</field>
        <field name="arch" type="xml">
            <list string="Paquetes">
                <field name="name"/>
                <field name="empresa_id"/>
                <field name="camion_id"/>
                <field name="destinatario_id"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_gestion_paqueteria_paquete_form" model="ir.ui.view">
        <field name="name">gestion.paqueteria.paquete.form</field>
        <field name="model">gestion.paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form string="Paquete">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="peso_kg"/>
                    </group>

                    <group string="Datos de envÃ­o">
                        <field name="empresa_id"/>
                        <field name="camion_id"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                    </group>

                    <group string="Estado del paquete">
                        <field name="estado"/>
                        <field name="fecha_envio"/>
                        <field name="fecha_entrega_estimada"/>
                    </group>

                    <notebook>
                        <page string="Seguimiento">
                            <field name="seguimiento_ids">
                                <list editable="bottom">
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                    <field name="notas"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_gestion_paqueteria_paquete" model="ir.actions.act_window">
        <field name="name">Paquetes</field>
        <field name="res_model">gestion.paqueteria.paquete</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
